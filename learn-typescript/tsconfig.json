{
  "include": [
    "build/**/*.ts",
    "gulpfile.ts",
    "src/**/*.ts",
    "miniprogram/**/*.ts",
    "template/**/*.ts",
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/miniprogram-api-typings",
      // "node_modules/@dragongate/miniprogram-api-typings"
    ]
  }
}